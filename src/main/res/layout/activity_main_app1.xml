<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityApp1">

    <Button
        android:id="@+id/bntCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_orange_light"
        android:foregroundGravity="top|bottom|center"
        android:minWidth="150"
        android:minHeight="80"
        android:text="CALCULAR"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_column="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_row="3"
        tools:layout_editor_absoluteY="541dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/bntLimpar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:foregroundGravity="top|bottom|center"
        android:minWidth="150"
        android:minHeight="80"
        android:text="LIMPAR"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_column="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_row="3" />

    <TextView
        android:id="@+id/calendario.txt"
        android:layout_width="413dp"
        android:layout_height="88dp"
        android:background="#F2F5F8"
        android:text="    Calendário de Pagamento"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#0D5CDF"
        android:textColorLink="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="163dp"
        tools:ignore="MissingConstraints" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="412dp"
        android:layout_height="271dp"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="263dp"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/rendaMensal.txt"
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Informe sua Renda Mensal"
            android:textColor="#2196F3"
            android:textColorLink="#3C3535"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_row="2" />

        <EditText
            android:id="@+id/txtcpf"
            android:layout_width="418dp"
            android:layout_height="88dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Informe seu CPF"
            android:textColor="#2196F3"
            android:textColorLink="#3C3535"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_row="0" />

        <EditText
            android:id="@+id/dataNascimento.txt"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Informe sua Data de Nascimento"
            android:textColor="#2196F3"
            android:textColorLink="#3C3535"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_row="1" />

    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/axilio_Emergencial.txt"
        android:layout_width="409dp"
        android:layout_height="77dp"
        android:background="#F2F5F8"
        android:text="         Axílio Emergial"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#0D5CDF"
        android:textColorLink="#FFFFFF"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="86dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/logo.img"
        android:layout_width="414dp"
        android:layout_height="86dp"
        android:background="#2196F3"
        app:srcCompat="@drawable/logo_app1"
        tools:layout_editor_absoluteX="-2dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>